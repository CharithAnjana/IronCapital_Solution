@model Ironcapital.Models.BuyNowClass

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
 
        <title>IRON Capital – Admin Dashboard </title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <style>
            body {
                margin: 0;
                font-family: Arial, Helvetica, sans-serif;
            }

            .topnav {
                overflow: hidden;
                background-color: #333;
            }

                .topnav a {
                    float: left;
                    color: #f2f2f2;
                    text-align: center;
                    padding: 14px 16px;
                    text-decoration: none;
                    font-size: 17px;
                }

                    .topnav a:hover {
                        background-color: #ddd;
                        color: black;
                    }

                    .topnav a.active {
                        background-color: #04AA6D;
                        color: white;
                    }

            .topnav-right {
                float: right;
            }
        </style>

    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

    <div class="topnav">
        <a asp-action="Index" asp-controller="AdminDashboard">Home</a>
        <a asp-action="List" asp-controller="Token">Tokens</a>
        <div class="topnav-right">
            <a asp-action="Logout" asp-controller="User">Logout</a>
        </div>
    </div>
    <br />

    <div>
        <h4>BuyNowClass</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FullName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FullName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Phone)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TokenClass)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TokenClass.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.WalletAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.WalletAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TwitterID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TwitterID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Message)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Message)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RecBy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RecBy)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.OrderId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</body>
</html>
